<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Layout khi KHÔNG có chuyến -->
    <ScrollView
        android:id="@+id/completeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/main_diadiemdulich"
                android:layout_gravity="center" />

            <!-- Lời chào -->
            <TextView
                android:id="@+id/txtNoTripCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào Tho N.. Quý khách không có đặt chỗ đã hủy gần đây"
                android:paddingTop="16dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center" />

            <!-- Phụ đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lên kế hoạch cho chuyến đi tiếp theo!"
                android:paddingTop="8dp"
                android:textSize="14sp"
                android:textColor="#555555" />

            <!-- Các gợi ý hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="24dp">

                <!-- Tìm chỗ nghỉ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/main_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm chỗ nghỉ?"
                        android:textSize="13sp"
                        android:paddingTop="8dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Cần chuyến bay -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/main_flight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cần chuyến bay?"
                        android:textSize="13sp"
                        android:paddingTop="8dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Tìm hoạt động -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/main_nuocuong" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tìm hoạt động?"
                        android:textSize="13sp"
                        android:paddingTop="8dp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Đề xuất tìm thêm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang tìm những đơn đặt phòng cách đây hơn 18 tháng ư?"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Xem đơn đặt phòng"
                android:textColor="#1A73E8"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- Layout khi CÓ chuyến đi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCompletedTrip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>